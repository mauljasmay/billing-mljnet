<style>
.agent-sidebar-link {
    transition: all 0.3s ease;
    border-radius: 8px;
    font-size: 0.95rem;
}

.agent-sidebar-link:hover {
    background: rgba(255, 255, 255, 0.1) !important;
    color: #ffffff !important;
    transform: translateX(5px);
}

.agent-sidebar-link.active {
    background: #ffffff !important;
    color: #333333 !important;
    font-weight: bold;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.agent-sidebar-link.active:hover {
    background: #f8f9fa !important;
    color: #333333 !important;
    transform: translateX(5px);
}

.agent-sidebar-link.active i {
    color: #28a745 !important;
}

/* Mobile responsive */
@media (max-width: 1000px) {
    .sidebar {
        display: none;
    }

    .agent-sidebar-link {
        font-size: 1rem;
        padding: 12px 16px !important;
    }
}
</style>

<!-- Mobile Top Navbar (Only visible on mobile) -->
<nav class="navbar navbar-expand-md navbar-dark d-md-none mobile-navbar">
    <div class="container-fluid">
        <div class="d-flex align-items-center">
            <button class="btn btn-link text-white p-0 me-3" type="button" id="agentSidebarToggle">
                <i class="bi bi-list" style="font-size: 1.5rem;"></i>
            </button>
            <span class="navbar-brand mb-0">Portal Agent</span>
        </div>
    </div>
</nav>

<!-- Overlay for mobile sidebar -->
<div class="sidebar-overlay d-md-none" id="agentSidebarOverlay"></div>

<!-- Agent Sidebar -->
<nav class="col-md-2 sidebar d-flex flex-column" id="agentSidebar" style="background: linear-gradient(135deg, #28a745, #20c997); color: #fff; min-height: 100vh;">
    <!-- Close button for mobile -->
    <div class="d-md-none text-end p-3">
        <button class="btn btn-link text-white p-0" id="agentSidebarClose">
            <i class="bi bi-x" style="font-size: 1.5rem;"></i>
        </button>
    </div>

    <!-- Scrollable Content Container -->
    <div class="sidebar-content" style="padding: 2rem; flex: 1; overflow-y: auto;">
        <h6 class="text-center mb-4 fw-bold">Portal Agent</h6>

        <a href="/agent/dashboard" class="d-block text-decoration-none p-3 mb-2 agent-sidebar-link <%= (typeof page !== 'undefined' && page === 'dashboard') ? 'active' : 'text-white' %>">
            <i class="bi bi-house me-2"></i> Dashboard
        </a>
        <a href="/agent/customers" class="d-block text-decoration-none p-3 mb-2 agent-sidebar-link <%= (typeof page !== 'undefined' && page === 'customers') ? 'active' : 'text-white' %>">
            <i class="bi bi-people me-2"></i> Pelanggan
        </a>
        <a href="/agent/installations" class="d-block text-decoration-none p-3 mb-2 agent-sidebar-link <%= (typeof page !== 'undefined' && page === 'installations') ? 'active' : 'text-white' %>">
            <i class="bi bi-tools me-2"></i> Instalasi
        </a>
        <a href="/agent/payments" class="d-block text-decoration-none p-3 mb-2 agent-sidebar-link <%= (typeof page !== 'undefined' && page === 'payments') ? 'active' : 'text-white' %>">
            <i class="bi bi-credit-card me-2"></i> Pembayaran
        </a>
        <a href="/agent/vouchers" class="d-block text-decoration-none p-3 mb-2 agent-sidebar-link <%= (typeof page !== 'undefined' && page === 'vouchers') ? 'active' : 'text-white' %>">
            <i class="bi bi-ticket-perforated me-2"></i> Voucher
        </a>
        <a href="/agent/reports" class="d-block text-decoration-none p-3 mb-2 agent-sidebar-link <%= (typeof page !== 'undefined' && page === 'reports') ? 'active' : 'text-white' %>">
            <i class="bi bi-bar-chart me-2"></i> Laporan
        </a>

        <hr class="text-white my-4">

        <a href="/agent/logout" class="d-block text-white text-decoration-none p-3 agent-sidebar-link">
            <i class="bi bi-box-arrow-right me-2"></i> Logout
        </a>
    </div>

    <!-- Version Info Panel -->
    <% if (typeof agent !== 'undefined') { %>
    <div class="version-info-panel" style="margin-top: auto; padding: 1rem 2rem; background: rgba(255, 255, 255, 0.1); border-radius: 8px; margin: 0 1rem 1rem 1rem;">
        <div class="text-center mb-3">
            <small class="d-block text-white-50">Logged in as:</small>
            <small class="d-block text-white fw-bold"><%= agent.name || agent.phone || 'Agent' %></small>
            <small class="d-block text-white-50">Role: <%= agent.role || 'agent' %></small>
        </div>
        <div class="version-details">
            <div class="version-item d-flex justify-content-between">
                <span class="version-label text-white-50">Version:</span>
                <span class="version-value text-white">v3.1.1</span>
            </div>
        </div>
    </div>
    <% } %>
</nav>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const sidebarToggle = document.getElementById('agentSidebarToggle');
    const sidebarClose = document.getElementById('agentSidebarClose');
    const sidebar = document.getElementById('agentSidebar');
    const overlay = document.getElementById('agentSidebarOverlay');

    // Toggle sidebar on mobile hamburger click
    if (sidebarToggle) {
        sidebarToggle.addEventListener('click', function() {
            sidebar.classList.add('show');
            overlay.classList.add('show');
            document.body.style.overflow = 'hidden';
        });
    }

    // Close sidebar functions
    function closeSidebar() {
        sidebar.classList.remove('show');
        overlay.classList.remove('show');
        document.body.style.overflow = '';
    }

    // Close sidebar on close button click
    if (sidebarClose) {
        sidebarClose.addEventListener('click', closeSidebar);
    }

    // Close sidebar on overlay click
    if (overlay) {
        overlay.addEventListener('click', closeSidebar);
    }

    // Close sidebar when clicking on nav links (mobile)
    const navLinks = sidebar.querySelectorAll('.agent-sidebar-link');
    navLinks.forEach(link => {
        link.addEventListener('click', function() {
            if (window.innerWidth < 768) {
                setTimeout(closeSidebar, 100);
            }
        });
    });

    // Handle window resize
    window.addEventListener('resize', function() {
        if (window.innerWidth >= 768) {
            closeSidebar();
        }
    });
});
</script>
