<style>
.technician-sidebar-link {
    transition: all 0.3s ease;
    border-radius: 8px;
    font-size: 0.95rem;
}

.technician-sidebar-link:hover {
    background: rgba(255, 255, 255, 0.1) !important;
    color: #ffffff !important;
    transform: translateX(5px);
}

.technician-sidebar-link.active {
    background: #ffffff !important;
    color: #333333 !important;
    font-weight: bold;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.technician-sidebar-link.active:hover {
    background: #f8f9fa !important;
    color: #333333 !important;
    transform: translateX(5px);
}

.technician-sidebar-link.active i {
    color: #667eea !important;
}

/* Mobile responsive */
@media (max-width: 1000px) {
    .sidebar {
        display: none;
    }

    .technician-sidebar-link {
        font-size: 1rem;
        padding: 12px 16px !important;
    }
}
</style>

<!-- Mobile Top Navbar (Only visible on mobile) -->
<nav class="navbar navbar-expand-md navbar-dark d-md-none mobile-navbar">
    <div class="container-fluid">
        <div class="d-flex align-items-center">
            <button class="btn btn-link text-white p-0 me-3" type="button" id="technicianSidebarToggle">
                <i class="bi bi-list" style="font-size: 1.5rem;"></i>
            </button>
            <span class="navbar-brand mb-0">Portal Teknisi</span>
        </div>
    </div>
</nav>

<!-- Overlay for mobile sidebar -->
<div class="sidebar-overlay d-md-none" id="technicianSidebarOverlay"></div>

<!-- Technician Sidebar -->
<nav class="col-md-2 sidebar d-flex flex-column" id="technicianSidebar" style="background: linear-gradient(135deg, #667eea, #764ba2); color: #fff; min-height: 100vh;">
    <!-- Close button for mobile -->
    <div class="d-md-none text-end p-3">
        <button class="btn btn-link text-white p-0" id="technicianSidebarClose">
            <i class="bi bi-x" style="font-size: 1.5rem;"></i>
        </button>
    </div>

    <!-- Scrollable Content Container -->
    <div class="sidebar-content" style="padding: 2rem; flex: 1; overflow-y: auto;">
        <h6 class="text-center mb-4 fw-bold">Portal Teknisi</h6>

        <a href="/technician/dashboard" class="d-block text-decoration-none p-3 mb-2 technician-sidebar-link <%= (typeof page !== 'undefined' && (page === 'dashboard' || page === 'monitoring')) ? 'active' : 'text-white' %>">
            <i class="bi bi-house me-2"></i> Dashboard
        </a>
        <a href="/technician/customers" class="d-block text-decoration-none p-3 mb-2 technician-sidebar-link <%= (typeof page !== 'undefined' && page === 'customers') ? 'active' : 'text-white' %>">
            <i class="bi bi-people me-2"></i> Pelanggan
        </a>
        <a href="/technician/installations" class="d-block text-decoration-none p-3 mb-2 technician-sidebar-link <%= (typeof page !== 'undefined' && page === 'installations') ? 'active' : 'text-white' %>">
            <i class="bi bi-tools me-2"></i> Instalasi
        </a>
        <a href="/technician/troubletickets" class="d-block text-decoration-none p-3 mb-2 technician-sidebar-link <%= (typeof page !== 'undefined' && page === 'troubletickets') ? 'active' : 'text-white' %>">
            <i class="bi bi-exclamation-triangle me-2"></i> Gangguan
        </a>
        <a href="/technician/monitoring" class="d-block text-decoration-none p-3 mb-2 technician-sidebar-link <%= (typeof page !== 'undefined' && page === 'monitoring') ? 'active' : 'text-white' %>">
            <i class="bi bi-graph-up me-2"></i> Monitoring
        </a>
        <a href="/technician/mapping" class="d-block text-decoration-none p-3 mb-2 technician-sidebar-link <%= (typeof page !== 'undefined' && page === 'mapping') ? 'active' : 'text-white' %>">
            <i class="bi bi-geo-alt me-2"></i> Mapping
        </a>

        <% if (typeof technician !== 'undefined' && (technician.role === 'collector' || technician.role === 'field_officer')) { %>
        <a href="/technician/payments" class="d-block text-decoration-none p-3 mb-2 technician-sidebar-link <%= (typeof page !== 'undefined' && page === 'payments') ? 'active' : 'text-white' %>">
            <i class="bi bi-credit-card me-2"></i> Pembayaran
        </a>
        <% } %>

        <hr class="text-white my-4">

        <a href="/technician/logout" class="d-block text-white text-decoration-none p-3 technician-sidebar-link">
            <i class="bi bi-box-arrow-right me-2"></i> Logout
        </a>
    </div>

    <!-- Version Info Panel -->
    <% if (typeof technician !== 'undefined') { %>
    <div class="version-info-panel" style="margin-top: auto; padding: 1rem 2rem; background: rgba(255, 255, 255, 0.1); border-radius: 8px; margin: 0 1rem 1rem 1rem;">
        <div class="text-center mb-3">
            <small class="d-block text-white-50">Logged in as:</small>
            <small class="d-block text-white fw-bold"><%= technician.name || technician.phone || 'Teknisi' %></small>
            <small class="d-block text-white-50">Role: <%= technician.role || 'technician' %></small>
        </div>
        <div class="version-details">
            <div class="version-item d-flex justify-content-between">
                <span class="version-label text-white-50">Version:</span>
                <span class="version-value text-white">v3.1.1</span>
            </div>
        </div>
    </div>
    <% } %>
</nav>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const sidebarToggle = document.getElementById('technicianSidebarToggle');
    const sidebarClose = document.getElementById('technicianSidebarClose');
    const sidebar = document.getElementById('technicianSidebar');
    const overlay = document.getElementById('technicianSidebarOverlay');

    // Toggle sidebar on mobile hamburger click
    if (sidebarToggle) {
        sidebarToggle.addEventListener('click', function() {
            sidebar.classList.add('show');
            overlay.classList.add('show');
            document.body.style.overflow = 'hidden';
        });
    }

    // Close sidebar functions
    function closeSidebar() {
        sidebar.classList.remove('show');
        overlay.classList.remove('show');
        document.body.style.overflow = '';
    }

    // Close sidebar on close button click
    if (sidebarClose) {
        sidebarClose.addEventListener('click', closeSidebar);
    }

    // Close sidebar on overlay click
    if (overlay) {
        overlay.addEventListener('click', closeSidebar);
    }

    // Close sidebar when clicking on nav links (mobile)
    const navLinks = sidebar.querySelectorAll('.technician-sidebar-link');
    navLinks.forEach(link => {
        link.addEventListener('click', function() {
            if (window.innerWidth < 768) {
                setTimeout(closeSidebar, 100);
            }
        });
    });

    // Handle window resize
    window.addEventListener('resize', function() {
        if (window.innerWidth >= 768) {
            closeSidebar();
        }
    });
});
</script>
