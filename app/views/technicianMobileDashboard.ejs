<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Dashboard Teknisi' %> - <%= settings.company_header || 'GEMBOK' %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Technician Mobile CSS -->
    <link href="/css/technician-mobile.css" rel="stylesheet">
    
    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#10b981">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="apple-mobile-web-app-title" content="Portal Teknisi">
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/img/icons/icon-192.png">
</head>
<body data-technician-role="<%= technician.role || 'technician' %>">
    <!-- Mobile Header -->
    <div class="tech-mobile-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4><i class="bi bi-person-gear me-2"></i>Portal Teknisi</h4>
                <p>Selamat datang, <%= technician.name %></p>
                <span class="tech-role-badge tech-role-<%= technician.role || 'technician' %>">
                    <%= technician.role === 'field_officer' ? 'Field Officer' : 
                        technician.role === 'collector' ? 'Kolektor' : 'Teknisi' %>
                </span>
            </div>
            <div class="text-end">
                <div class="dropdown">
                    <button class="btn btn-outline-light btn-sm" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/technician/dashboard"><i class="bi bi-house me-2"></i>Dashboard</a></li>
                        <li><a class="dropdown-item" href="/technician/customers"><i class="bi bi-people me-2"></i>Pelanggan</a></li>
                        <li><a class="dropdown-item" href="/technician/monitoring"><i class="bi bi-wifi me-2"></i>Monitoring</a></li>
                        <li><a class="dropdown-item" href="/technician/mapping"><i class="bi bi-geo-alt me-2"></i>Peta Jaringan</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/technician/logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container-fluid px-3">
        <!-- Stats Grid -->
        <div class="tech-stats-grid">
            <div class="tech-stat-card" onclick="location.href='/technician/monitoring'">
                <div class="tech-stat-icon">
                    <i class="bi bi-wifi"></i>
                </div>
                <div class="tech-stat-value" id="total-devices"><%= genieacsTotal || 0 %></div>
                <div class="tech-stat-label">Total Device</div>
            </div>
            
            <div class="tech-stat-card" onclick="location.href='/technician/monitoring'">
                <div class="tech-stat-icon">
                    <i class="bi bi-check-circle text-success"></i>
                </div>
                <div class="tech-stat-value text-success" id="online-devices"><%= genieacsOnline || 0 %></div>
                <div class="tech-stat-label">Online</div>
            </div>
            
            <div class="tech-stat-card" onclick="location.href='/technician/monitoring'">
                <div class="tech-stat-icon">
                    <i class="bi bi-x-circle text-danger"></i>
                </div>
                <div class="tech-stat-value text-danger" id="offline-devices"><%= genieacsOffline || 0 %></div>
                <div class="tech-stat-label">Offline</div>
            </div>
            
            <div class="tech-stat-card" onclick="location.href='/technician/customers'">
                <div class="tech-stat-icon">
                    <i class="bi bi-people"></i>
                </div>
                <div class="tech-stat-value"><%= mikrotikTotal || 0 %></div>
                <div class="tech-stat-label">Pelanggan</div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="tech-quick-actions">
            <h5><i class="bi bi-lightning-charge me-2"></i>Aksi Cepat</h5>
            <div class="tech-action-buttons">
                <!-- Actions will be populated by JavaScript based on role -->
            </div>
        </div>

        <!-- Main Menu -->
        <div class="tech-menu">
            <a href="/technician/monitoring" class="tech-menu-card">
                <div class="tech-menu-icon">
                    <i class="bi bi-wifi"></i>
                </div>
                <div class="tech-menu-title">Monitoring</div>
                <div class="tech-menu-description">Pantau status device dan jaringan</div>
            </a>
            
            <a href="/technician/customers" class="tech-menu-card">
                <div class="tech-menu-icon">
                    <i class="bi bi-people"></i>
                </div>
                <div class="tech-menu-title">Pelanggan</div>
                <div class="tech-menu-description">Kelola data pelanggan</div>
            </a>
            
            <a href="/technician/mapping" class="tech-menu-card">
                <div class="tech-menu-icon">
                    <i class="bi bi-geo-alt"></i>
                </div>
                <div class="tech-menu-title">Peta Jaringan</div>
                <div class="tech-menu-description">Lihat peta jaringan dan ODP</div>
            </a>
            
            <% if (technician.role === 'field_officer' || technician.role === 'technician') { %>
            <a href="/technician/installations" class="tech-menu-card">
                <div class="tech-menu-icon">
                    <i class="bi bi-tools"></i>
                </div>
                <div class="tech-menu-title">Instalasi</div>
                <div class="tech-menu-description">Kelola jadwal instalasi</div>
            </a>
            <% } %>
            
            <a href="/technician/troubletickets" class="tech-menu-card">
                <div class="tech-menu-icon">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <div class="tech-menu-title">Gangguan</div>
                <div class="tech-menu-description">Kelola laporan gangguan</div>
            </a>
            
            <% if (technician.role === 'collector' || technician.role === 'field_officer') { %>
            <a href="/technician/payments" class="tech-menu-card">
                <div class="tech-menu-icon">
                    <i class="bi bi-cash-stack"></i>
                </div>
                <div class="tech-menu-title">Pembayaran</div>
                <div class="tech-menu-description">Kelola pembayaran pelanggan</div>
            </a>
            <% } %>
        </div>

        <!-- Recent Activities -->
        <div class="tech-quick-actions">
            <h5><i class="bi bi-clock-history me-2"></i>Aktivitas Terbaru</h5>
            <div id="recent-activities">
                <div class="text-center text-muted py-3">
                    <i class="bi bi-hourglass-split me-2"></i>
                    Memuat aktivitas...
                </div>
            </div>
        </div>

        <!-- System Status -->
        <div class="tech-quick-actions">
            <h5><i class="bi bi-activity me-2"></i>Status Sistem</h5>
            <div class="row g-2">
                <div class="col-6">
                    <div class="d-flex align-items-center p-2 bg-light rounded">
                        <i class="bi bi-server text-success me-2"></i>
                        <div>
                            <div class="small fw-bold">GenieACS</div>
                            <div class="small text-muted">Online</div>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex align-items-center p-2 bg-light rounded">
                        <i class="bi bi-router text-success me-2"></i>
                        <div>
                            <div class="small fw-bold">Mikrotik</div>
                            <div class="small text-muted">Online</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom Navigation -->
    <div class="tech-bottom-nav">
        <a href="/technician/dashboard" class="tech-nav-item active">
            <i class="bi bi-house"></i>
            <span>Home</span>
        </a>
        
        <a href="/technician/monitoring" class="tech-nav-item">
            <i class="bi bi-wifi"></i>
            <span>Monitor</span>
        </a>
        
        <a href="/technician/troubletickets" class="tech-nav-item home-button">
            <i class="bi bi-ticket-detailed"></i>
            <span>Tiket</span>
        </a>
        
        <a href="/technician/customers" class="tech-nav-item">
            <i class="bi bi-people"></i>
            <span>Customer</span>
        </a>
        
        <a href="/technician/mapping" class="tech-nav-item">
            <i class="bi bi-geo-alt"></i>
            <span>Map</span>
        </a>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Technician Mobile JS -->
    <script src="/js/technician-mobile.js"></script>
    
    <script>
        // Load system status
        function loadSystemStatus() {
            fetch('/technician/api/mobile-dashboard-data')
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        const data = result.data;
                        updateSystemStatus(data.systemStatus);
                    } else {
                        throw new Error(result.error || 'Failed to load system status');
                    }
                })
                .catch(error => {
                    console.error('❌ Error loading system status:', error);
                    // Keep default status jika API gagal
                });
        }

        function updateSystemStatus(systemStatus) {
            // Update GenieACS status
            const genieacsStatus = document.querySelector('.col-6:first-child .small.text-muted');
            if (genieacsStatus) {
                genieacsStatus.textContent = systemStatus.genieacs || 'Online';
            }

            // Update Mikrotik status
            const mikrotikStatus = document.querySelector('.col-6:last-child .small.text-muted');
            if (mikrotikStatus) {
                mikrotikStatus.textContent = systemStatus.mikrotik || 'Online';
            }
        }
        
        function loadRecentActivities() {
            // Load real activities from API instead of hardcoded
            fetch('/technician/api/mobile-dashboard-data')
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        const data = result.data;
                        const activitiesContainer = document.getElementById('recent-activities');

                        if (data.recentActivities && data.recentActivities.length > 0) {
                            const activitiesHtml = data.recentActivities.map(activity => {
                                let icon = 'bi-wifi';
                                let color = 'text-success';

                                switch(activity.type) {
                                    case 'device_monitoring':
                                        icon = 'bi-wifi';
                                        color = 'text-success';
                                        break;
                                    case 'customer_update':
                                        icon = 'bi-people';
                                        color = 'text-primary';
                                        break;
                                    case 'trouble_ticket':
                                        icon = 'bi-exclamation-triangle';
                                        color = 'text-warning';
                                        break;
                                }

                                return `
                                    <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                        <div>
                                            <div class="small fw-bold">${getActivityTitle(activity.type)}</div>
                                            <div class="small text-muted">${formatTime(activity.latest_time)}</div>
                                        </div>
                                        <i class="bi ${icon} ${color}"></i>
                                    </div>
                                `;
                            }).join('');

                            activitiesContainer.innerHTML = `<div class="list-group list-group-flush">${activitiesHtml}</div>`;
                        } else {
                            activitiesContainer.innerHTML = `
                                <div class="text-center text-muted py-3">
                                    <i class="bi bi-hourglass-split me-2"></i>
                                    Belum ada aktivitas terbaru
                                </div>
                            `;
                        }
                    } else {
                        throw new Error(result.error || 'Failed to load activities');
                    }
                })
                .catch(error => {
                    console.error('❌ Error loading activities:', error);
                    showFallbackActivities();
                });
        }

        function getActivityTitle(type) {
            switch(type) {
                case 'device_monitoring': return 'Device Monitoring';
                case 'customer_update': return 'Customer Update';
                case 'trouble_ticket': return 'Trouble Ticket';
                default: return 'Activity';
            }
        }

        function formatTime(timeString) {
            if (!timeString) return 'Baru saja';

            const time = new Date(timeString);
            const now = new Date();
            const diffMinutes = Math.floor((now - time) / (1000 * 60));

            if (diffMinutes < 1) return 'Baru saja';
            if (diffMinutes < 60) return `${diffMinutes} menit yang lalu`;

            const diffHours = Math.floor(diffMinutes / 60);
            if (diffHours < 24) return `${diffHours} jam yang lalu`;

            const diffDays = Math.floor(diffHours / 24);
            return `${diffDays} hari yang lalu`;
        }

        function showFallbackActivities() {
            // Fallback jika API gagal
            const activitiesContainer = document.getElementById('recent-activities');
            activitiesContainer.innerHTML = `
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                        <div>
                            <div class="small fw-bold">Device Monitoring</div>
                            <div class="small text-muted">2 menit yang lalu</div>
                        </div>
                        <i class="bi bi-wifi text-success"></i>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                        <div>
                            <div class="small fw-bold">Customer Update</div>
                            <div class="small text-muted">15 menit yang lalu</div>
                        </div>
                        <i class="bi bi-people text-primary"></i>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                        <div>
                            <div class="small fw-bold">Trouble Ticket</div>
                            <div class="small text-muted">1 jam yang lalu</div>
                        </div>
                        <i class="bi bi-exclamation-triangle text-warning"></i>
                    </div>
                </div>
            `;
        }
    </script>
</body>
</html>
