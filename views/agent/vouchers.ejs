        // Copy voucher info to clipboard
        function copyVoucherInfo() {
            const voucherCode = document.getElementById('voucherCodeResult') ? document.getElementById('voucherCodeResult').textContent : '';
            const voucherPassword = document.getElementById('voucherPasswordResult') ? document.getElementById('voucherPasswordResult').textContent : '';
            const packageName = document.getElementById('resultPackage') ? document.getElementById('resultPackage').textContent : '';
            const price = document.getElementById('resultPrice') ? document.getElementById('resultPrice').textContent : '';
            
            const voucherInfo = `Voucher Hotspot Berhasil!\n\n` +
                `📱 Username: ${voucherCode}\n` +
                `🔑 Password: ${voucherPassword}\n` +
                `📦 Paket: ${packageName}\n` +
                `💰 Harga: ${price}\n\n` +
                `Silakan gunakan kredensial di atas untuk mengakses WiFi hotspot.`;
            
            navigator.clipboard.writeText(voucherInfo).then(function() {
                showAlert('Informasi voucher berhasil disalin!', 'success');
            }, function(err) {
                console.error('Could not copy text: ', err);
                showAlert('Gagal menyalin informasi voucher', 'danger');
